<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.eltinchopracticas.views.ui.Fragments.menuFragment"
    android:background="@color/primaryTextColor">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/image_parrilla"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:minHeight="125dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@mipmap/ic_banner_foreground_tincho"></ImageView>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:layout_marginTop="110dp"


                >
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_margin="32dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="15dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/whiteTransparent"
                            android:backgroundTint="#000000"
                            android:backgroundTintMode="src_atop"
                            android:elevation="15dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="15dp">


                            <ImageView
                                android:id="@+id/cardPlatillos"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/platillos">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fitsSystemWindows="false"
                                android:freezesText="false"
                                android:text="Platillos"
                                android:textAlignment="center"
                                android:fontFamily="@font/caladea"
                                android:textColor="@color/gold"
                                android:textFontWeight="600"
                                android:textSize="24sp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@color/whiteTransparent"
                            android:backgroundTint="#000000"
                            android:backgroundTintMode="src_atop">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/pedidos"
                                android:id="@+id/cardPedido">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Pedidos"
                                android:fontFamily="@font/caladea"
                                android:textColor="@color/secondaryTextColor"
                                android:textFontWeight="600"
                                android:textSize="24sp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@color/whiteTransparent"
                            android:backgroundTint="#000000"
                            android:backgroundTintMode="src_atop">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/user"
                                android:id="@+id/cardMiCuenta">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Mi cuenta"
                                android:fontFamily="@font/caladea"
                                android:textColor="@color/primaryTextColor"
                                android:textFontWeight="600"
                                android:textSize="24sp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@color/whiteTransparent"
                            android:backgroundTint="#000000"
                            android:backgroundTintMode="src_atop">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/favs"
                                android:id="@+id/cardFavoritos">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Favoritos"
                                android:fontFamily="@font/caladea"
                                android:textColor="@color/secondaryTextColor"
                                android:textFontWeight="600"
                                android:textSize="24sp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@color/whiteTransparent"
                            android:backgroundTint="#000000"
                            android:backgroundTintMode="src_atop">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/menu"
                                android:id="@+id/cardContactanos">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="ContactÃ¡nos"
                                android:textFontWeight="800"
                                android:fontFamily="@font/caladea"
                                android:textColor="@color/secondaryTextColor"
                                android:textSize="24sp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="15dp"
                            android:background="@color/whiteTransparent"
                            android:backgroundTint="#000000"
                            android:backgroundTintMode="src_atop">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@mipmap/help"
                                android:id="@+id/cardAyuda">

                            </ImageView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Ayuda"
                                android:fontFamily="@font/caladea"
                                android:textColor="@color/secondaryTextColor"
                                android:textFontWeight="600"
                                android:textSize="24sp">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </ScrollView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
